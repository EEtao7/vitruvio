%% compute range of motion of EE

% function [reachablePositions] = getRangeofMotion(quadruped)
l_hip = quadruped.hip(1).length;
l_thigh = quadruped.thigh(1).length; % length of first arm
l_shank = quadruped.shank(1).length; % length of second arm

q1 = 0:0.1:pi/2; % all possible theta1 values
q2 = -pi/4:0.1:pi/4; % all possible theta2 values
q3 = q2;
q4 = q2;

[THETA1,THETA2,THETA3,THETA4] = meshgrid(q1,q2); % generate a grid of theta1 and theta2 values

X =  l_thigh * sin(THETA2) + lshank * sin(THETA2 + THETA3); % compute x coordinates
Z = -l_thigh * cos(THETA2) - lshank * cos(THETA2 + THETA3); % compute z coordinates

data1 = [X(:) Y(:) Z(:) THETA1(:)]; % create x-y-theta1 dataset
data2 = [X(:) Y(:) Z(:) THETA2(:)]; % create x-y-theta2 dataset